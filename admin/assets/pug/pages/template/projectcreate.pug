- var page_Title = 'Project Create';
- var chat_menu             = true;
- var theme_customizer      = true;
- var typeahead             = true;
- var typeahead_search      = true;
- var animate               = true;
- var dropzone              = true;
- var date_picker           = true;
- var sidebar               = true;
- var slick                 = true;
- var header_slider         = true;
- var animate               = true;
- var scrollbar             = true;
include ../../components/mixin
doctype html
html(lang='en')
  include ../../components/header-files
  body
    include ../../components/loader
    include ../../components/taptop
    // page-wrapper Start
    #pageWrapper.page-wrapper.default-wrapper
      .page-header.row
        +breadcrumb(['Apps','Project Create'],'Project Create')
        include ../../components/header
      // Page Body Start
      .page-body-wrapper.default-menu.default-menu
        include ../../components/sidebar
        .page-body
          // Container-fluid starts
          .container-fluid
            .row
              .col-sm-12
                .card
                  .card-body
                    .form.theme-form
                      .row
                        .col
                          .mb-3
                            label Project Title
                            input.form-control(type='text', placeholder='Project name *')
                      .row
                        .col
                          .mb-3
                            label Client name
                            input.form-control(type='text', placeholder='Name client or company name')
                      .row
                        .col-sm-4
                          .mb-3
                            label Project Rate
                            input.form-control(type='text', placeholder='Enter project Rate')
                        .col-sm-4
                          .mb-3
                            label Project Type
                            select.form-select
                              option Hourly
                              option Fix price
                        .col-sm-4
                          .mb-3
                            label Priority
                            select.form-select
                              option Low
                              option Medium
                              option High
                              option Urgent
                      .row
                        .col-sm-4
                          .mb-3
                            label Project Size
                            select.form-select
                              option Small
                              option Medium
                              option Big
                        .col-sm-4
                          .mb-3
                            label Starting date
                            input.datepicker-here.form-control(type='text', data-language='en')
                        .col-sm-4
                          .mb-3
                            label Ending date
                            input.datepicker-here.form-control(type='text', data-language='en')
                      .row
                        .col
                          .mb-3
                            label Enter some Details
                            textarea#exampleFormControlTextarea4.form-control(rows='3')
                      .row
                        .col
                          .mb-3
                            label Upload project file
                            form#singleFileUpload.dropzone(action='/upload.php')
                              .dz-message.needsclick
                                i.icon-cloud-up
                                h5.f-w-600 Drop files here or click to upload.
                                span.note.needsclick
                                  | (This is just a demo dropzone. Selected files are 
                                  strong not
                                  |  actually uploaded.)

                      .row
                        .col
                          div.text-end
                            a.btn.btn-success.me-3(href="#") Add
                            a.btn.btn-danger(href="#") Cancel



          // Container-fluid Ends
        include ../../components/footer
    include ../../components/footer-files
